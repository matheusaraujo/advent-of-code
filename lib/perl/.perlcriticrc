severity = 1
verbose = 8

exclude = Modules::RequireVersionVar Modules::RequireExplicitPackage

color-severity-highest = bold red underline
color-severity-high = bold magenta
color-severity-medium = blue
color-severity-low =
color-severity-lowest =

[ValuesAndExpressions::ProhibitMagicNumbers]
allowed_values = -1 0 1 2 3 4 9 25 50 51 75 100 101 103 1000 2024 10000000000000

[InputOutput::RequireCheckedSyscalls]
functions = :builtins
exclude_functions = print

[Subroutines::ProhibitManyArgs]
max_arguments = 7
