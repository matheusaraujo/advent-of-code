{
  "editor.formatOnSave": true,
  "python.analysis.extraPaths": ["./utils"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "cSpell.words": [
    "addheaders",
    "clsname",
    "graphviz",
    "hookwrapper",
    "markdownify",
    "maxsplit",
    "mcsname",
    "popleft",
    "pytest",
    "sessionstart",
    "tryfirst"
  ]
}
